{
  "name": "@bouchenoiremarc/stylelint-config",
  "version": "1.2.0",
  "description": "My personal Stylelint configurations.",
  "author": "Marc Bouchenoire",
  "license": "MIT",
  "repository": "https://github.com/bouchenoiremarc/stylelint-config",
  "keywords": [
    "stylelint",
    "config"
  ],
  "files": [
    "index.js",
    "scss.js"
  ],
  "main": "index.js",
  "prettier": "@bouchenoiremarc/prettier-config",
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --ignore-path .eslintignore --write"
    ],
    "**/*.{json,md,yml}": [
      "prettier --ignore-path .eslintignore --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint '**/*.js' --fix",
    "lint:prettier": "prettier '**/*.{js,json,md,yml}' --ignore-path .eslintignore --write --loglevel silent",
    "release": "yarn login && np --no-tests"
  },
  "devDependencies": {
    "@bouchenoiremarc/prettier-config": "^1.1.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "4.3.8",
    "lint-staged": "^12.1.2",
    "np": "^7.6.0",
    "prettier": "^2.4.1",
    "stylelint": "^14.1.0"
  },
  "dependencies": {
    "postcss": "^8.3.11",
    "stylelint-config-css-modules": "^2.3.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-standard-scss": "^3.0.0"
  },
  "peerDependencies": {
    "prettier": ">=2.0.0",
    "stylelint": ">=14.0.0"
  }
}
